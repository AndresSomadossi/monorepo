{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"transit": {
			"dependsOn": ["^transit"]
		},
		"lint": {
			"dependsOn": ["transit"]
		},
		"check": {
			"dependsOn": ["transit", "^build"]
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["^build"]
		},
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist"]
		},
		"test": {
			"dependsOn": ["build"]
		},
		"deploy": {
			"dependsOn": ["lint", "check", "build"]
		}
	}
}
